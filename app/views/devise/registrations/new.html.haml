.devise-container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .devise-container__upper
      %h2 新規登録
    .devise-container__lower
      .devise-container__lower--inner
        .nickname.form
          ニックネーム
          = f.text_field :nickname, placeholder: "ニックネーム", class: "block"
        .email.form
          Email
          = f.email_field :email, placeholder: "メールアドレス", class: "block"
        .password.form
          Password
          = f.password_field :password, placeholder: "7文字以上", class: "block"
        .password.form
          Password (確認)
          = f.password_field :password_confirmation, placeholder: "7文字以上", class: "block"
        .form
          = f.submit "新規登録", class: "button block"
        = link_to "ログインはこちら", new_user_session_path, class: "to-other-form"